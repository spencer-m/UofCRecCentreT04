<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Panel Menu Theme -->
    <style name="PanelMain">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">bottom</item>
    </style>
    <style name="PanelSlideMain">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.6</item>
        <item name="android:background">@color/red</item>
    </style>
    <style name="PanelButtonUp" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dockheight</item>
        <item name="android:text">OPEN MENU</item>
        <item name="android:textSize">21dp</item>
        <item name="android:drawableLeft">@drawable/ic_vertical_align_top_white_24dp</item>
        <item name="android:drawableRight">@drawable/ic_vertical_align_top_white_24dp</item>

    </style>
    <style name="PanelButtonList">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/openMenuB</item>
    </style>
    <style name="PanelButtonDown" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dockheight</item>
        <item name="android:text">CLOSE MENU</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_below">@id/menu_list</item>
        <item name="android:drawableLeft">@drawable/ic_vertical_align_bottom_white_24dp</item>
        <item name="android:drawableRight">@drawable/ic_vertical_align_bottom_white_24dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Fitness Centre separate themes -->
    <style name="AppThemeFitnessCentre" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeFitnessCentre.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeFitnessCentre.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppThemeFitnessCentre.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
