<?xml version="1.0" encoding="utf-8"?>

<com.sothree.slidinguppanel.SlidingUpPanelLayout
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_dock"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    sothree:umanoAnchorPoint="0.36"
    sothree:umanoPanelHeight="36dp"
    sothree:umanoShadowHeight="4dp">


    <!-- MAIN CONTENT -->
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="cpsc481.fall2016.uofcreccentret04.Home">

        <ImageView
            android:layout_width="448px"
            android:layout_height="362px"
            android:src="@drawable/uclogo"
            android:layout_centerHorizontal="true"
            android:id="@+id/imageView" />

        <Button
            android:text="Fitness Centre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="86dp"
            android:id="@+id/fc_button"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:onClick="toFitnessCentre" />

        <Button
            android:text="Bookings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fc_button"
            android:id="@+id/booking_button"
            android:layout_alignStart="@+id/fc_button"
            android:layout_alignEnd="@+id/fc_button"
            android:onClick="toBookings" />

    </RelativeLayout>


    <!-- PANEL LAYOUT -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|top"
            android:text="Menu Drawer"
            android:textSize="16sp" />

        <!-- MENU LIST -->
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/menu_list">
        </ListView>

    </RelativeLayout>

</com.sothree.slidinguppanel.SlidingUpPanelLayout>
