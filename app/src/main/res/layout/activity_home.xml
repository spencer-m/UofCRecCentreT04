<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#E30C00"
    tools:context="cpsc481.fall2016.uofcreccentret04.Home">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:paddingTop="30dp"
        android:src="@drawable/uclogo"
        android:layout_centerHorizontal="true"
        android:id="@+id/uclogohome" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:src="@drawable/ucname"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/ucnamehome"
        android:layout_below="@id/uclogohome"
        android:paddingTop="25dp"/>

    <Button
        android:text="Fitness Centre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="86dp"
        android:id="@+id/fc_button"
        android:layout_below="@+id/ucnamehome"
        android:layout_centerHorizontal="true"
        android:onClick="toFitnessCentre"/>

    <Button
        android:text="Bookings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fc_button"
        android:id="@+id/booking_button"
        android:layout_alignStart="@+id/fc_button"
        android:layout_alignEnd="@+id/fc_button"
        android:onClick="toBookings"/>




</RelativeLayout>
